<resources>

  <!-- Base application theme. -->
  <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
    <!-- Customize your theme here. -->
    <item name="android:editTextBackground">@drawable/rn_edit_text_material</item>
  </style>

  <style name="NotifWidgetPrayer">
    <item name="android:textColor">@color/secondary_text_color</item>
    <item name="android:textSize">12sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="NotifWidgetPrayerActive" parent="NotifWidgetPrayer">
    <item name="android:textColor">@color/active_prayer</item>
  </style>

  <style name="NotifWidgetBigPrayer">
    <item name="android:textColor">@color/secondary_text_color</item>
    <item name="android:textSize">13sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="NotifWidgetBigPrayerActive" parent="NotifWidgetBigPrayer">
    <item name="android:textColor">@color/active_prayer</item>
  </style>

  <style name="ScreenWidgetPrayer">
    <item name="android:textColor">@color/secondary_text_color</item>
    <item name="android:textSize">14sp</item>
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:maxLines">1</item>
    <item name="android:textAlignment">center</item>
  </style>

  <style name="ScreenWidgetPrayerActive" parent="ScreenWidgetPrayer">
    <item name="android:textColor">@color/active_prayer</item>
  </style>

</resources>
