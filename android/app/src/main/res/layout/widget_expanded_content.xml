            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prayer1active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/prayer1active_name"
            style="@style/PrayerLabelsActive"
            android:text="-"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/prayer1active_time"
            style="@style/PrayerLabelsActive"
            android:text="--:--"
            tools:ignore="HardcodedText" />

    </LinearLayout>

