<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:gravity="center"
  android:orientation="vertical">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
      android:id="@+id/hijri_date_v"
      android:textColor="@color/secondary_text_color"
      android:textSize="14sp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:maxLines="1"
      android:text="-" />

    <TextView
      android:id="@+id/secondary_date_v"
      android:textColor="@color/secondary_text_color"
      android:textSize="13sp"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:gravity="center"
      android:maxLines="1"
      android:text="-" />

  </LinearLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:baselineAligned="false"
    android:layoutDirection="rtl"

    android:orientation="horizontal">


    <LinearLayout
        android:id="@+id/prayer1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

      <TextView
          android:id="@+id/prayer1_name"
          style="@style/NotifWidgetBigPrayer"
          tools:ignore="HardcodedText"
          android:text="Fajr" />

      <TextView
          android:id="@+id/prayer1_time"
          style="@style/NotifWidgetBigPrayer"
          tools:ignore="HardcodedText"
          android:text="00:00" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prayer1active"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:visibility="gone"
        android:orientation="vertical">

      <TextView
          android:id="@+id/prayer1active_name"
          style="@style/NotifWidgetBigPrayerActive"
          tools:ignore="HardcodedText"
          android:text="-" />

      <TextView
          android:id="@+id/prayer1active_time"
          style="@style/NotifWidgetBigPrayerActive"
          tools:ignore="HardcodedText"
          android:text="--:--" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/prayer2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
